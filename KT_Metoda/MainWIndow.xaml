<Window x:Class="Nikolić_KT_Metoda.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nikolić_KT_Metoda"
        mc:Ignorable="d"
        Title="Alternative" Height="450" Width="300">
    <Grid>
        <StackPanel>
            <Label>Alternative</Label>

            <StackPanel Height="350" Margin="5">
                <Label>Nova alternativa:</Label>
                <StackPanel Margin="10" Orientation="Horizontal">
                    <TextBox Width="200" x:Name="alternativa"></TextBox>
                    <Button Width="25" VerticalContentAlignment="Center" Margin="10,0,0,0" Click="DodajAlt_Click">+</Button>
                </StackPanel>
                <StackPanel>
                    <Label>Vse alternative:</Label>
                    <ListBox x:Name="altList">
                        <!--alternative-->
                    </ListBox>
                </StackPanel>
            </StackPanel>

            <Button Width="150" Margin="0,0,10,0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="Parametri_Click">Naprej na parametre ></Button>

        </StackPanel>
    </Grid>
</Window>
