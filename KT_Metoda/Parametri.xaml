<Window x:Class="Nikolić_KT_Metoda.Parametri"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nikolić_KT_Metoda"
        mc:Ignorable="d"
        Title="Parametri" Height="450" Width="320">
    <Grid>
        <StackPanel>
            <Label>Parametri</Label>

            <StackPanel Height="350" Margin="5">
                <Label>Novi parameter:</Label>
                <StackPanel Margin="10" Orientation="Horizontal">
                    <TextBox Width="200" Margin="0,0,10,0" x:Name="parameter"></TextBox>
                    <TextBox Width="25" x:Name="utez"></TextBox>
                    <Button Width="25" VerticalContentAlignment="Center" Margin="10,0,0,0" Click="DodajParam_Click">+</Button>
                </StackPanel>
                <StackPanel>
                    <Label>Vsi parametri:</Label>
                    <ListBox x:Name="paramList">
                        <!--parametri-->
                    </ListBox>
                </StackPanel>
            </StackPanel>

            <Button Width="150" Margin="0,0,10,0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="Ocene_Click">Naprej na ocene ></Button>

        </StackPanel>
    </Grid>
</Window>